<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>
                        Settings
                    </sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.enableEmailConfirm>
                        <TCEforms>
                            <label>LLL:EXT:pxa_newsletter_subscription/Resources/Private/Language/locallang_db.xlf:enableEmailConfirm</label>
                            <onChange>reload</onChange>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.enableEmailConfirm>
                    <settings.formFieldNameIsMandatory>
                        <TCEforms>
                            <label>LLL:EXT:pxa_newsletter_subscription/Resources/Private/Language/locallang_db.xlf:formFieldNameIsMandatory</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.formFieldNameIsMandatory>
                    <settings.displayUnsubscribeButton>
                        <TCEforms>
                            <label>LLL:EXT:pxa_newsletter_subscription/Resources/Private/Language/locallang_db.xlf:displayUnsubscribeButton</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.displayUnsubscribeButton>
                    <settings.saveFolder>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>LLL:EXT:pxa_newsletter_subscription/Resources/Private/Language/locallang_db.xlf:save_folder</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>1</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.saveFolder>
                    <settings.confirmPage>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>LLL:EXT:pxa_newsletter_subscription/Resources/Private/Language/locallang_db.xlf:confirmPage</label>
                            <displayCond>FIELD:settings.enableEmailConfirm:REQ:TRUE</displayCond>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.confirmPage>
                </el>
            </ROOT>
        </sDEF>
        <confirmMail>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Confirmation Mail</sheetTitle>
                </TCEforms>
                <displayCond>FIELD:sDEF.settings.enableEmailConfirm:REQ:TRUE</displayCond>
                <type>array</type>
                <el>
                    <settings.confirmMailSenderName>
                        <TCEforms>
                            <label>LLL:EXT:pxa_newsletter_subscription/Resources/Private/Language/locallang_db.xlf:confirmMailSenderName</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <max>30</max>
                                <eval>trim,required</eval>
                            </config>
                        </TCEforms>
                    </settings.confirmMailSenderName>
                    <settings.confirmMailSenderEmail>
                        <TCEforms>
                            <label>LLL:EXT:pxa_newsletter_subscription/Resources/Private/Language/locallang_db.xlf:confirmMailSenderEmail</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <max>30</max>
                                <eval>trim,required</eval>
                            </config>
                        </TCEforms>
                    </settings.confirmMailSenderEmail>
                    <settings.confirmMailSubject>
                        <TCEforms>
                            <label>LLL:EXT:pxa_newsletter_subscription/Resources/Private/Language/locallang_db.xlf:confirmMailSubject</label>
                            <config>
                                <type>input</type>
                                <size>35</size>
                                <max>35</max>
                                <eval>trim,required</eval>
                            </config>
                        </TCEforms>
                    </settings.confirmMailSubject>
                    <settings.confirmLinkText>
                        <TCEforms>
                            <label>LLL:EXT:pxa_newsletter_subscription/Resources/Private/Language/locallang_db.xlf:confirmLinkText</label>
                            <config>
                                <type>input</type>
                                <size>35</size>
                                <max>35</max>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.confirmLinkText>
                    <settings.confirmMailSubscribeBody>
                        <TCEforms>
                            <label>LLL:EXT:pxa_newsletter_subscription/Resources/Private/Language/locallang_db.xlf:confirmMailSubscribeBody</label>
                            <defaultExtras>richtext[*]:rte_transform[mode=ts_css]</defaultExtras>
                            <config>
                                <type>text</type>
                                <cols>35</cols>
                                <rows>10</rows>
                                <eval>trim,required</eval>
                                <enableRichtext>1</enableRichtext>
                            </config>
                        </TCEforms>
                    </settings.confirmMailSubscribeBody>
                    <settings.confirmMailUnsubscribeBody>
                        <TCEforms>
                            <label>LLL:EXT:pxa_newsletter_subscription/Resources/Private/Language/locallang_db.xlf:confirmMailUnsubscribeBody</label>
                            <defaultExtras>richtext[*]:rte_transform[mode=ts_css]</defaultExtras>
                            <config>
                                <type>text</type>
                                <cols>35</cols>
                                <rows>10</rows>
                                <eval>trim,required</eval>
                                <enableRichtext>1</enableRichtext>
                            </config>
                        </TCEforms>
                    </settings.confirmMailUnsubscribeBody>
                </el>
            </ROOT>
        </confirmMail>
    </sheets>
</T3DataStructure>